{
  "name": "azd-infra",
  "version": "1.0.0",
  "description": "Manages your Azure Developer CLI projects' infrastructure",
  "type": "module",
  "bin": {
    "azd-infra": "./bin/azd-infra.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sinedied/azd-infra"
  },
  "exports": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "start": "node ./bin/azd-infra.js",
    "build": "npm run clean -s && tsc",
    "build:watch": "tsc -w --sourceMap",
    "lint": "xo",
    "lint:fix": "xo --fix",
    "clean": "rm -rf lib *.tgz",
    "release:check": "semantic-release --dry-run",
    "prepare": "simple-git-hooks || echo 'simple-git-hooks install skipped'"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "debug": "^4.3.5",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^20.14.1",
    "@types/update-notifier": "^6.0.8",
    "semantic-release": "^24.0.0",
    "semantic-release-npm-github": "^5.0.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.4.5",
    "update-notifier": "^7.0.0",
    "xo": "^0.58.0"
  },
  "keywords": [
    "azure",
    "azd",
    "cli",
    "bicep",
    "infra",
    "infrastructure",
    "updater"
  ],
  "author": {
    "name": "Yohan Lasorsa",
    "url": "https://twitter.com/sinedied"
  },
  "homepage": "https://github.com/sinedied/azd-infra",
  "bugs": {
    "url": "https://github.com/sinedied/azd-infra/issues"
  },
  "license": "MIT",
  "release": {
    "extends": "semantic-release-npm-github",
    "branches": "main"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": "xo --fix"
  },
  "prettier": {
    "trailingComma": "none",
    "bracketSpacing": true
  },
  "xo": {
    "space": true,
    "prettier": true,
    "envs": [
      "node"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "files": [
    "bin",
    "lib"
  ]
}
